<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_kaola_play"
    android:paddingBottom="@dimen/kaola_playpage_bottom_space"
    tools:ignore="PxUsage">

    <include
        layout="@layout/common_title_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_h"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/list_frame"
        android:layout_width="@dimen/kaola_playpage_list_w"
        android:layout_height="match_parent"
        android:layout_above="@+id/play_bar_root"
        android:layout_below="@+id/toolbar_sub"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/kaola_playpage_list_margintop"
        android:layout_marginRight="@dimen/kaola_playpage_list_marginright"
        android:background="@drawable/bg_playlist">

        <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
            android:id="@+id/music_kaola_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tip_img"
            android:paddingTop="@dimen/kaola_playpage_list_paddingtop"
            android:paddingBottom="@dimen/kaola_playpage_list_paddingbottom">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/music_kaola_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layerType="software" />
        </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

    </RelativeLayout>

    <include
        android:id="@+id/play_detail_status"
        layout="@layout/play_detail_status_kaola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_sub"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/kaola_playpage_playinfo_margintop"
        android:layout_marginStart="@dimen/kaola_playpage_playinfo_marginstart"
        android:layout_marginEnd="@dimen/kaola_playpage_playinfo_marginend"
        android:layout_toStartOf="@+id/list_frame" />

    <include
        layout="@layout/play_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/kaola_playpage_playprogress_marginleft"
        android:layout_marginTop="@dimen/kaola_playpage_playprogress_marginleft"
        android:layout_marginRight="@dimen/kaola_playpage_playprogress_marginleft" />
</RelativeLayout>