<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/custom_play_seekbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/custom_play_seekbar_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/custom_play_seekbar_time_color"
            android:textSize="@dimen/custom_play_seekbar_time_textsize" />

        <SeekBar
            android:id="@+id/custom_play_seekbar_seecbar"
            android:layout_width="0pt"
            android:layout_height="80pt"
            android:layout_weight="1"
            android:maxHeight="4pt"
            android:minHeight="4pt"
            android:progressDrawable="@drawable/bg_play_seek_all"
            android:splitTrack="false"
            android:thumb="@drawable/play_seekbar_thumb"
            android:thumbOffset="0dp" />

        <TextView
            android:id="@+id/custom_play_seekbar_totaltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/custom_play_seekbar_time_color"
            android:textSize="@dimen/custom_play_seekbar_time_textsize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/custom_play_ctr_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_play_seekbar_layout"
        android:layout_marginTop="@dimen/custom_play_controll_margin_top"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/custom_play_ctr_pre"
            android:layout_width="@dimen/custom_play_controll_button_size"
            android:layout_height="@dimen/custom_play_controll_button_size"
            android:src="@drawable/usb_pre" />

        <ImageView
            android:id="@+id/custom_play_ctr_playpause"
            android:layout_width="@dimen/custom_play_controll_button_size"
            android:layout_height="@dimen/custom_play_controll_button_size"
            android:layout_marginLeft="90pt"
            android:layout_marginRight="90pt"
            android:src="@drawable/selector_usb_play_pause" />

        <ImageView
            android:id="@+id/custom_play_ctr_next"
            android:layout_width="@dimen/custom_play_controll_button_size"
            android:layout_height="@dimen/custom_play_controll_button_size"
            android:src="@drawable/usb_next" />
    </LinearLayout>

    <ImageView
        android:id="@+id/custom_play_ctr_mode"
        android:layout_width="@dimen/custom_play_controll_button_size"
        android:layout_height="@dimen/custom_play_controll_button_size"
        android:layout_below="@id/custom_play_seekbar_layout"
        android:layout_marginTop="@dimen/custom_play_controll_margin_top"
        android:layout_marginLeft="@dimen/custom_play_controll_mode_paddingleft"
        android:src="@drawable/music_usb_mode_loop" />
</RelativeLayout>