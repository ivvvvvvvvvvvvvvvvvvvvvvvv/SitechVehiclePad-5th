<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_weather_tomorrow_content"
    android:layout_width="590pt"
    android:layout_height="130pt"
    android:background="@drawable/weather_info_day_bg"
    android:gravity="center_horizontal"
    android:paddingLeft="20pt"
    android:paddingRight="20pt">

    <TextView
        android:id="@+id/id_weather_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="#B3FFFFFF"
        android:textSize="28pt"
        tools:text="12日" />

    <TextView
        android:id="@+id/id_weather_date_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30pt"
        android:layout_toRightOf="@id/id_weather_date"
        android:textColor="#B3FFFFFF"
        android:textSize="28pt"
        tools:text="周三" />

    <TextView
        android:id="@+id/id_weather_tip"
        android:layout_width="wrap_content"
        android:layout_height="46pt"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30pt"
        android:layout_toRightOf="@id/id_weather_date_week"
        android:background="@drawable/weather_info_tip_wuran_bg"
        android:gravity="center"
        android:paddingLeft="20pt"
        android:paddingTop="5pt"
        android:paddingRight="20pt"
        android:paddingBottom="5pt"
        android:textColor="#B3FFFFFF"
        android:textSize="28pt"
        tools:text="污染" />

    <TextView
        android:id="@+id/id_weather_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="34pt"
        android:layout_toRightOf="@id/id_weather_tip"
        android:textColor="#B3FFFFFF"
        android:textSize="28pt"
        tools:text="晴" />

    <TextView
        android:id="@+id/id_weather_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="34pt"
        android:layout_toRightOf="@id/id_weather_status"
        android:textColor="#B3FFFFFF"
        android:textSize="28pt"
        tools:text="16/0" />

