<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMainBg</item>
        <item name="colorPrimaryDark">@color/colorMainBg</item>
        <item name="colorAccent">@color/colorMainBg</item>
        <item name="android:windowBackground">@color/colorMainBg</item>
    </style>

    <style name="WhiteAppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="WebTheme" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>
</resources>
