<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="MainAppTheme" parent="AppTheme">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="NoTitleAppTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
<!--        <item name="android:windowIsTranslucent">true</item>-->
    </style>
<!--    <style name="SplashAppTheme" parent="NoTitleAppTheme">-->
<!--        <item name="android:windowBackground">@drawable/ico_logo</item>-->
<!--    </style>-->

    <style name="style_white_line">
        <item name="android:background">@color/main_info_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
<!--        <item name="android:layout_marginLeft">23px</item>-->
<!--        <item name="android:layout_marginRight">23px</item>-->
    </style>

    <style name="picture_select_white_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/colorMainBg</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/colorMainBg</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">true</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@drawable/ico_back</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@drawable/arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@drawable/arrow_up</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/white</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/transparent</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/checkbox_num_selector</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture.style.checkNumMode">true</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">true</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/color_fa</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/colorPrimary</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/colorPrimary</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/num_oval</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/colorMainBg</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/white</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/colorPrimary</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/color_fa</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@drawable/picture_back</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/bar_grey</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/bar_grey</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/white</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/orange_oval</item>
    </style>

    <style name="style_tv_home">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">38pt</item>
    </style>

    <style name="style_tv_home_music">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32pt</item>
    </style>

    <style name="pop_anim">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BottomAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/bottom_exit_anim</item>
    </style>

    <style name="car_radio_radiobutton">
        <item name="android:layout_width">84pt</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">32pt</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_car_radio_selected</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">36pt</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TabLayoutTextStyle2">
        <item name="android:textSize">32px</item>
    </style>

    <style name="wifi_item_text">
        <item name="android:textColor">@color/wifi_txt</item>
    </style>

    <!--setting home item_layout-->
    <style name="style_setting_home_item_layout">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">306dp</item>
        <item name="android:layout_marginLeft">50dp</item>
    </style>
    <style name="car_set_radiobutton">
        <item name="android:layout_width">144pt</item>
        <item name="android:layout_height">82pt</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">26pt</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_car_ctrl</item>
    </style>

    <!--拨号键盘样式-->
    <style name="DialNumStyle">
        <item name="android:layout_width">@dimen/width_dial_num</item>
        <item name="android:layout_height">@dimen/height_dial_num</item>
        <item name="android:background">@drawable/shape_dial_num</item>
        <item name="android:textColor">@drawable/select_dial_number</item>
        <item name="android:textSize">@dimen/text_dial_num</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BtImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="DialIngStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="phone_window_dia">
        <item name="android:layout_width">40pt</item>
        <item name="height">20pt</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10pt</item>
        <item name="background">@drawable/selector_blutooth_number_btn</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
