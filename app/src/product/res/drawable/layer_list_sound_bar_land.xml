<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <clip>
            <shape>
                <solid android:color="#0A1728" />
                <corners android:radius="24pt" />
                <size
                    android:width="150pt"
                    android:height="517pt" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="45"
                    android:endColor="#BED2FE"
                    android:startColor="#DEE7FA" />
                <corners android:radius="16px" />
                <size
                    android:width="150pt"
                    android:height="517pt" />
            </shape>
        </clip>
    </item>

</layer-list>