<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/setting_home_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="150px"
        android:layout_marginTop="@dimen/px_40"
        android:layout_marginBottom="@dimen/px_40"
        android:textColor="@color/white"
        android:textSize="32px" />

    <TextView
        android:id="@+id/setting_home_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="38px"
        android:layout_toLeftOf="@+id/setting_home_item_arrow"
        android:textColor="@color/white"
        android:textSize="32px" />

    <ImageView
        android:id="@+id/setting_home_item_arrow"
        android:layout_width="21px"
        android:layout_height="33px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="150px"
        android:src="@drawable/ico_mem_to" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/setting_home_item_title"
        android:background="@color/main_info_line" />

</RelativeLayout>