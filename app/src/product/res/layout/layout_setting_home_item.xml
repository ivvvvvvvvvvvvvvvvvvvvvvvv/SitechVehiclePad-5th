<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/setting_home_item_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/setting_padding_left_right"
        android:paddingRight="@dimen/setting_padding_left_right">

        <TextView
            android:id="@+id/setting_home_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/pt_40"
            android:layout_marginBottom="@dimen/pt_40"
            android:textColor="@color/white"
            android:textSize="32pt" />

        <TextView
            android:id="@+id/setting_home_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/setting_home_item_title"
            android:layout_toLeftOf="@+id/setting_home_item_arrow"
            android:textColor="@color/white"
            android:textSize="32pt" />

        <ImageView
            android:id="@+id/setting_home_item_arrow"
            android:layout_width="21pt"
            android:layout_height="33pt"
            android:layout_marginLeft="38pt"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_mem_to" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_below="@id/setting_home_item_content_layout"
        android:background="@drawable/ico_split_line_land" />

</RelativeLayout>