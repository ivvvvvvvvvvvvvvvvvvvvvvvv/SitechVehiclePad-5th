<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/play_bar_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_151"
    android:layout_gravity="center_vertical"
    android:background="@color/bottom_bar_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/play_controler_ll"
        android:layout_width="@dimen/px_766"
        android:layout_height="@dimen/px_151"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_pre"
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px_254"
            android:layout_marginRight="@dimen/px_135"
            android:clickable="true"
            android:src="@drawable/icon_pre" />

        <ImageView
            android:id="@+id/btn_pause_play"
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:layout_gravity="center"
            android:clickable="true"
            android:src="@drawable/selector_play_pause" />

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px_135"
            android:clickable="true"
            android:src="@drawable/icon_next" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="1154px"
        android:layout_height="@dimen/px_151"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.sitechdev.vehicle.pad.view.ScrollTextView
            android:id="@+id/tv_bottom_title"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_132"
            android:maxLines="1"
            android:text=" "
            android:textColor="@color/white"
            android:textSize="@dimen/px_46" />

        <ImageView
            android:id="@+id/btn_pop_list"
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:layout_alignParentRight="true"
            android:layout_gravity="end|center"
            android:layout_marginRight="@dimen/px_209"
            android:clickable="true"
            android:src="@drawable/icon_play_list" />
    </RelativeLayout>
</LinearLayout>