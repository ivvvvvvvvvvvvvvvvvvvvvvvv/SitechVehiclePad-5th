<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/category_item_size"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/blue">

    <com.gcssloop.widget.RCImageView
        app:round_corner="6pt"
        android:id="@+id/image"
        android:layout_width="@dimen/category_item_size"
        android:layout_height="@dimen/category_item_size"
        tools:background="@color/colorPrimary_red_tip" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_alignLeft="@+id/image"
        android:layout_marginTop="@dimen/category_item_title_margin_top"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="@dimen/category_item_title_text_size"
        tools:text="二货一箩筐" />

    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="10pt"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="播放次数：10W"
        android:textColor="#818282"
        android:textSize="@dimen/category_item_sub_title_text_size" />
</RelativeLayout>