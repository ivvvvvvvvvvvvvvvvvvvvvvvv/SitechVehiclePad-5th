<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ico_taxi_main_bg">

    <include layout="@layout/common_title_toolbar" />

    <RelativeLayout
        android:id="@+id/id_skin_top_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56px"
        android:layout_marginTop="180px"
        android:layout_marginRight="58px">

        <ImageView
            android:id="@+id/id_img_current_skin_preview"
            android:layout_width="525px"
            android:layout_height="311px"
            android:src="@drawable/icon_default_skin" />

        <RelativeLayout
            android:id="@+id/id_top_right_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="78px"
            android:layout_marginRight="78px"
            android:layout_toRightOf="@id/id_img_current_skin_preview"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/id_img_current_skin_title"
                android:layout_width="397px"
                android:layout_height="32px"
                android:src="@drawable/icon_default_skin_title" />

            <com.sitechdev.vehicle.pad.view.SkinTextView
                android:id="@+id/id_tv_current_skin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_img_current_skin_title"
                android:layout_marginTop="60px"
                android:text="新特炫彩主题皮肤"
                android:textColor="@color/color_setting_skin_main_text"
                android:textSize="38px" />

            <com.sitechdev.vehicle.pad.view.SkinTextView
                android:id="@+id/id_tv_current_skin_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_tv_current_skin_title"
                android:layout_marginTop="44px"
                android:ellipsize="end"
                android:lineSpacingExtra="10px"
                android:maxLines="2"
                android:text="黑色皮肤模式说明文字主题黑色皮黑色皮肤模式说明文字主题黑色皮黑色皮肤模式说明文字主题黑色皮黑色皮肤模式说明文字"
                android:textColor="@color/color_setting_skin_second_text"
                android:textSize="30px" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/id_skin_second_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_skin_top_content"
        android:layout_marginLeft="56px"
        android:layout_marginTop="47px"
        android:layout_marginRight="56px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_img_skin_preview_1"
            android:layout_width="560px"
            android:layout_height="320px"
            android:src="@drawable/icon_whiteorange_skin" />

        <ImageView
            android:id="@+id/id_img_skin_preview_2"
            android:layout_width="560px"
            android:layout_height="320px"
            android:layout_marginLeft="64px"
            android:src="@drawable/icon_blueorange_skin" />

        <ImageView
            android:id="@+id/id_img_skin_preview_3"
            android:layout_width="560px"
            android:layout_height="320px"
            android:layout_marginLeft="64px"
            android:src="@drawable/icon_unkown_skin" />
    </LinearLayout>
</RelativeLayout>