<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:layout_width="1000pt"
    android:layout_height="140pt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_kaola_player"
    android:orientation="horizontal">

    <com.gcssloop.widget.RCImageView
        app:round_corner="4pt"
        android:id="@+id/icon"
        android:layout_width="90pt"
        android:layout_height="90pt"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="40pt"
        android:layout_marginRight="40pt" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/playcontrol"
        android:layout_toRightOf="@+id/icon">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="36pt"
            tools:text="zsdasdasd" />

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#6073B5"
            android:textSize="36pt"
            tools:text="11111" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/playcontrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="120pt"
        android:layout_toLeftOf="@+id/list"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pre"
            android:layout_width="72pt"
            android:layout_height="72pt"
            android:layout_gravity="center_vertical"
            android:src="@drawable/pc_pre" />

        <ImageView
            android:id="@+id/playpause"
            android:layout_width="52pt"
            android:layout_height="52pt"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="96pt"
            android:src="@drawable/pc_play" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="52pt"
            android:layout_height="52pt"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="96pt"
            android:src="@drawable/pc_next" />
    </LinearLayout>


    <ImageView
        android:id="@+id/list"
        android:layout_width="52pt"
        android:layout_height="52pt"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="42pt"
        android:src="@drawable/pc_playlist" />
</RelativeLayout>