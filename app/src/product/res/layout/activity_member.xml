<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12173D"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="118px"
    android:paddingRight="255px">

    <ImageView
        android:id="@+id/id_img_back"
        android:layout_width="34px"
        android:layout_height="58px"
        android:layout_marginTop="138px"
        android:layout_alignParentLeft="true"
        android:scaleType="center"
        android:src="@drawable/ico_back" />

    <LinearLayout
        android:id="@+id/id_page_tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="103px"
        android:layout_marginTop="161px"
        android:layout_toRightOf="@id/id_img_back"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/id_member_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_img_member_logo"
                android:layout_width="200px"
                android:layout_height="200px"
                android:scaleType="fitXY"
                android:src="@drawable/ico_default_member_logo" />

            <TextView
                android:id="@+id/id_tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="62px"
                android:layout_weight="1"
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="48px" />

            <TextView
                android:id="@+id/id_tv_qd_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="63px"
                android:gravity="center"
                android:background="@drawable/ico_qd_bg"
                android:singleLine="true"
                android:text="签到领积分"
                android:paddingLeft="34px"
                android:paddingRight="34px"
                android:paddingTop="30px"
                android:paddingBottom="30px"
                android:textColor="#239CE2"
                android:textSize="42px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_member_my_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="75px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_img_my_point_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@drawable/ico_mypoint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="32px"
                android:singleLine="true"
                android:text="我的积分"
                android:textColor="@android:color/white"
                android:textSize="38px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="58px"
            android:alpha="0.1"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/id_member_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="75px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_img_feedback_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@drawable/ico_feedback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="32px"
                android:singleLine="true"
                android:text="意见反馈"
                android:textColor="@android:color/white"
                android:textSize="38px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="58px"
            android:alpha="0.1"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/id_member_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="75px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_img_about_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@drawable/ico_about" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="32px"
                android:singleLine="true"
                android:text="关于"
                android:textColor="@android:color/white"
                android:textSize="38px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="58px"
            android:alpha="0.1"
            android:background="@color/white" />

        <TextView
            android:id="@+id/id_tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_page_tool"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68px"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:singleLine="true"
            android:text="退出登录"
            android:textColor="#239CE2"
            android:textSize="38px" />
    </LinearLayout>
</RelativeLayout>