<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="70px">

    <ImageView
        android:id="@+id/id_ico_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/map_icon_location_item" />

    <RelativeLayout
        android:id="@+id/id_ico_location_contend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38px"
        android:layout_toRightOf="@id/id_ico_location">

        <TextView
            android:id="@+id/id_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/map_poi_item_title"
            android:textSize="42px"
            tools:text="路口充电站" />

        <TextView
            android:id="@+id/id_tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_tv_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/id_tv_title"
            android:singleLine="true"
            android:textColor="@color/map_poi_item_distance"
            android:textSize="38px"
            tools:text="距离您15.5公里" />

        <TextView
            android:id="@+id/id_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_tv_title"
            android:layout_marginTop="40px"
            android:maxLines="1"
            android:textColor="@color/map_poi_item_distance"
            android:textSize="42px"
            tools:text="距离您15.5公里" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/id_ico_location_contend"
        android:layout_marginTop="70px"
        android:alpha="0.1"
        android:background="@color/white" />

</RelativeLayout>
