<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="960pt"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_base"
    android:orientation="vertical"
    android:padding="40pt">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="93pt"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text="@string/app_developing"
        android:textColor="@android:color/white"
        android:textSize="38pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100pt"
        android:layout_marginBottom="30pt"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_tv_ok"
            android:layout_width="500pt"
            android:layout_height="100pt"
            android:background="@drawable/bg_btn_new_enable"
            android:gravity="center"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="38pt" />
    </LinearLayout>
</LinearLayout>
