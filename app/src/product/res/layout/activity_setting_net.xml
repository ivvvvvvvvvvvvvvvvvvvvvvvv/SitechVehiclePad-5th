<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ico_taxi_main_bg"
    android:paddingBottom="250px"
    android:splitMotionEvents="false">
    <include layout="@layout/common_title_toolbar" />
    <LinearLayout
        android:layout_below="@id/toolbar_sub"
        android:id="@+id/setting_net_content_layout"
        android:layout_width="1045dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--2 热点开关-->
        <RelativeLayout
            android:id="@+id/rl_hot_dot_section"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="119dp">

            <TextView
                android:id="@+id/tv_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="热点"
                android:textSize="32sp" />

            <TextView
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_hot"
                android:text="@string/hot_hint_1"
                android:textColor="@color/c_8f8f8f"
                android:textSize="28sp" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/hot_dot_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="48dp"
                android:padding="10dp"
                android:background="@color/transparent"
                android:thumb="@drawable/bg_common_btn_pf"
                app:track="@drawable/car_set_radio_group_bg"
                app:trackTintMode="multiply" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="120dp"
                android:text="    OFF            ON"
                android:textSize="32sp" />
        </RelativeLayout>

        <LinearLayout
            android:background="@drawable/shape_wifi_list"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--2.1 热点账号-->
            <RelativeLayout
                android:id="@+id/rl_hot_dot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:layout_marginLeft="68dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="名称"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/tv_hot_dot_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:textSize="28sp" />
            </RelativeLayout>

            <!--2.2 热点密码-->
            <RelativeLayout
                android:id="@+id/rl_hot_dot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="68dp"
                android:layout_marginBottom="33dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="密码"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/tv_hot_dot_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:text="3567890"
                    android:textSize="28sp" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_wifi_section"
            android:layout_width="wrap_content"
            android:layout_height="119dp">

            <TextView
                android:id="@+id/tv_wifi"
                android:textColor="@color/white"
                android:layout_marginLeft="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Wi-Fi"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/wifi_hint_txt"
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_wifi"
                android:text="@string/wifi_hint_1"
                android:textColor="@color/white"
                android:textSize="28sp" />


            <android.support.v7.widget.SwitchCompat
                android:id="@+id/wifi_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="48dp"
                android:padding="10dp"
                android:background="@color/transparent"
                android:thumb="@drawable/bg_common_btn_pf"
                app:track="@drawable/car_set_radio_group_bg"
                app:trackTintMode="multiply" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:layout_marginRight="120dp"
                android:text="    OFF            ON"
                android:textSize="32sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:visibility="gone">

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/smartrefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                app:srlEnableAutoLoadMore="true"
                app:srlEnableLoadMore="false">

                <com.sitechdev.vehicle.pad.view.ClassicsHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/wifi_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:background="@drawable/shape_wifi_list" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_below="@id/toolbar_sub"
        android:layout_toRightOf="@id/setting_net_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginStart="172dp"
        android:src="@drawable/wifi_on_big" />
</RelativeLayout>
