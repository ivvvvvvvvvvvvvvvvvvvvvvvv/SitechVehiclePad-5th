<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="60px"
        android:layout_marginTop="40px"
        android:layout_marginRight="60px"
        android:layout_marginBottom="40px"
        tools:layout_height="70px"
        tools:layout_width="1100px">

        <TextView
            android:id="@+id/cur_select_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:drawableLeft="@drawable/icon_kaola_category_cur_select_tag"
            android:drawablePadding="10px"
            android:textColor="#469DF7"
            android:textSize="18sp"
            tools:text="推荐" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#FF161B2A"
            android:orientation="horizontal"
            android:paddingLeft="20px"
            android:paddingRight="20px">

            <com.sitechdev.vehicle.pad.view.ListIndicatorRecycview
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_height="70px"
                tools:layout_width="1100px" />

            <ImageView
                android:id="@+id/btn_all_categroy"
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:src="@drawable/all_category" />
        </LinearLayout>

    </FrameLayout>

    <com.sitechdev.vehicle.pad.view.RecycviewInViewPager
        android:id="@+id/recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>