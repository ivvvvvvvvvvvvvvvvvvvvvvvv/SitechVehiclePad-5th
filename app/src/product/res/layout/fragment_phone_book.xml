<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
        android:id="@+id/pb_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_pb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layerType="software"
            android:paddingLeft="81pt"
            android:paddingRight="81pt"
            android:scrollbars="vertical" />
    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

    <ListView
        android:id="@+id/lv_index"
        android:layout_width="100pt"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/phone_down_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/height_all_toolbar"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/phone_book_hint_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:lineSpacingExtra="5pt"
            android:text="通讯录列表为空，请加载重试!"
            android:textColor="@color/white"
            android:textSize="30pt"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_contact_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/phone_book_hint_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:src="@drawable/ic_phone_empty"
            android:visibility="gone" />

        <Button
            android:id="@+id/phone_book_down_btn"
            android:layout_width="248dp"
            android:layout_height="78dp"
            android:layout_below="@+id/phone_book_hint_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_connect_bt"
            android:padding="10dp"
            android:paddingLeft="62dp"
            android:paddingTop="24dp"
            android:paddingRight="62dp"
            android:paddingBottom="24dp"
            android:text="点击加载"
            android:textSize="30sp"
            android:visibility="gone" />
    </RelativeLayout>


</RelativeLayout>
