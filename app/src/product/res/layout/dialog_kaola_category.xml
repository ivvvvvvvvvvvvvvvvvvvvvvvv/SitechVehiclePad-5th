<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/kaola_allcategory_dialog_h"
    android:padding="@dimen/kaola_allcategory_dialog_padding"
    tools:ignore="PxUsage">

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/kaola_allcategory_dialog_close_size"
        android:layout_height="@dimen/kaola_allcategory_dialog_close_size"
        android:src="@drawable/ic_close_dialog"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/close"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>