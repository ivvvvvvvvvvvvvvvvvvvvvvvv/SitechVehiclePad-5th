<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ico_taxi_main_bg"
    android:orientation="vertical">

    <include layout="@layout/common_title_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="48dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="119dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="48dp"
                    android:gravity="center_vertical"
                    android:text="在线升级"
                    android:textColor="@color/white"
                    android:textSize="32sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_new_version"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/red_ponit"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_setting_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:text="检查更新"
                        android:textColor="@color/white"
                        android:textSize="32sp" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="1040dp"
                android:layout_height="wrap_content"
                android:src="@drawable/common_line_white" />

            <RelativeLayout
                android:id="@+id/setting_app_version_info_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:layout_marginRight="80dp"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="48dp"
                    android:text="软件版本"
                    android:textColor="@color/white"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/tv_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="yyMMddHH"
                    android:textColor="@color/white"
                    android:textSize="32sp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="1040dp"
                android:layout_height="wrap_content"
                android:src="@drawable/common_line_white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:layout_marginEnd="80dp"
                android:focusable="true">

                <TextView
                    android:id="@+id/setting_mcu_version_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="48dp"
                    android:text="硬件版本"
                    android:textColor="@color/white"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/tv_mcu_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="当前版本号："
                    android:textColor="@color/white"
                    android:textSize="32sp" />


            </RelativeLayout>

            <ImageView
                android:layout_width="1040dp"
                android:layout_height="wrap_content"
                android:src="@drawable/common_line_white" />

            <RelativeLayout
                android:id="@+id/btn_sets_mate"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:layout_marginEnd="80dp"
                android:background="@drawable/selector_setting_reset_btn">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="119dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="48dp"
                    android:gravity="center_vertical"
                    android:text="恢复出厂设置"
                    android:textColor="@color/white"
                    android:textSize="32sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1040dp"
                android:layout_height="wrap_content"
                android:src="@drawable/common_line_white" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:src="@drawable/car_set" />

            <LinearLayout
                android:id="@+id/ll_version_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:background="#0B0C0E"
                android:orientation="vertical"
                android:padding="@dimen/dp_15"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_vin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="当前版本号：2.0.3"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_sn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="当前版本号："
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_iccid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="当前版本号："
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
