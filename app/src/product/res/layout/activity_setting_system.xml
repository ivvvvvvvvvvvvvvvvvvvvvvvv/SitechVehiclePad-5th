<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ico_taxi_main_bg"
    android:orientation="vertical"
    android:paddingBottom="300pt">

    <include layout="@layout/common_title_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_content_margin_top"
            android:orientation="vertical">

            <com.sitechdev.vehicle.pad.view.SettingHomeItemView
                android:id="@+id/setting_system_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title_content="检查更新"
                app:arrow_visibility="invisible"
                app:title_name="在线升级" />

            <com.sitechdev.vehicle.pad.view.SettingHomeItemView
                android:id="@+id/setting_system_soft_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:arrow_visibility="invisible"
                app:title_name="软件版本" />

            <com.sitechdev.vehicle.pad.view.SettingHomeItemView
                android:id="@+id/setting_system_mcu_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:arrow_visibility="invisible"
                app:title_content="V3.01"
                app:title_name="硬件版本" />

            <com.sitechdev.vehicle.pad.view.SettingHomeItemView
                android:id="@+id/setting_system_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:arrow_visibility="invisible"
                app:title_name="恢复出厂设置" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
