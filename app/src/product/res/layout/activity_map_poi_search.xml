<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12173D"
    android:orientation="vertical"
    android:paddingLeft="118pt"
    android:paddingRight="214pt">

    <ImageView
        android:id="@+id/id_img_back"
        android:layout_width="34pt"
        android:layout_height="58pt"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="138pt"
        android:src="@drawable/ico_back" />

    <LinearLayout
        android:id="@+id/id_query_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110pt"
        android:layout_marginTop="134pt"
        android:layout_toRightOf="@id/id_img_back"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="62pt"
                android:layout_height="62pt"
                android:src="@drawable/ico_query" />

            <EditText
                android:id="@+id/id_input_poi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29pt"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:background="@null"
                android:hint="请输入目的地"
                android:textColor="@color/white"
                android:textColorHint="#9AA4B6"
                android:textSize="48pt" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:layout_marginTop="46pt"
            android:alpha="0.1"
            android:background="@color/white" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_poi_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/id_query_view"
            android:layout_marginTop="40pt"
            android:layout_toRightOf="@id/id_img_back"
            android:paddingBottom="10dp" />
    </LinearLayout>
</RelativeLayout>