<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12173D"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingRight="214px">

    <include layout="@layout/common_toolbar" />

    <RelativeLayout
        android:id="@+id/id_rl_phone"
        android:layout_width="900px"
        android:layout_height="wrap_content"
        android:layout_marginTop="204px"
        android:layout_marginLeft="214px">

        <ImageView
            android:id="@+id/id_img_login_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_login_phone" />

        <EditText
            android:id="@+id/id_et_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:layout_marginLeft="47px"
            android:layout_toRightOf="@id/id_img_login_phone"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#888F9D"
            android:textSize="48px" />
    </RelativeLayout>

    <View
        android:layout_width="900px"
        android:layout_height="2px"
        android:layout_below="@id/id_login_valid_code"
        android:layout_marginTop="44px"
        android:alpha="0.1"
        android:layout_marginLeft="214px"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/id_rl_phone_valid"
        android:layout_width="900px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="214px"
        android:layout_marginTop="90px">

        <ImageView
            android:id="@+id/id_img_login_valid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_login_valid_code" />

        <TextView
            android:id="@+id/id_login_get_valid_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="39px"
            android:paddingRight="39px"
            android:background="@drawable/ico_login_bt_get_valid_disable"
            android:gravity="center_vertical"
            android:text="@string/string_page_login_get_valid"
            android:textSize="38px"
            android:enabled="false"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/id_login_valid_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:layout_marginLeft="42px"
            android:layout_marginRight="42px"
            android:layout_toLeftOf="@id/id_login_get_valid_code"
            android:layout_toRightOf="@id/id_img_login_valid"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#888F9D"
            android:textSize="48px" />
    </RelativeLayout>

    <View
        android:layout_width="900px"
        android:layout_height="2px"
        android:layout_below="@id/id_login_valid_code"
        android:layout_marginTop="37px"
        android:alpha="0.1"
        android:layout_marginLeft="214px"
        android:background="@color/white" />

    <Button
        android:id="@+id/id_login_btn"
        android:layout_width="644px"
        android:layout_height="122px"
        android:layout_marginLeft="214px"
        android:layout_marginTop="160px"
        android:background="@drawable/ico_login_btn"
        android:paddingTop="28px"
        android:paddingBottom="28px"
        android:text="@string/string_page_login_title"
        android:textColor="@color/white"
        android:textSize="48px" />
</LinearLayout>