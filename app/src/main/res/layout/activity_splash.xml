<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/id_rl_logo_under"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="116px">

        <ImageView
            android:id="@+id/id_iv_logo_under"
            android:layout_width="291px"
            android:layout_height="23px"
            android:layout_centerInParent="true" />

        <View
            android:layout_width="200px"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:layout_toLeftOf="@id/id_iv_logo_under"
            android:background="@android:color/darker_gray" />

        <View
            android:layout_width="200px"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:layout_toRightOf="@id/id_iv_logo_under"
            android:background="@android:color/darker_gray" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/id_iv_logo"
        android:layout_width="410px"
        android:layout_height="53px"
        android:layout_above="@id/id_rl_logo_under"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34px" />

</RelativeLayout>