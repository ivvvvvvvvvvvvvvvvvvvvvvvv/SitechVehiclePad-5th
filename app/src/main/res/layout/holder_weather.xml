<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/weather_holder_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"/>
    
    <TextView
        android:id="@+id/weather_holder_tempReal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/weather_holder_img"
        android:layout_marginLeft="34dp"
        android:layout_centerVertical="true"
        android:textSize="53sp"
        android:textColor="@color/white"
        android:text="24°C"/>
    <View
        android:layout_width="0.8dp"
        android:layout_height="51dp"
        android:layout_toRightOf="@+id/weather_holder_tempReal"
        android:layout_marginLeft="24dp"
        android:layout_centerVertical="true"
        android:background="@color/white_21"/>
    <LinearLayout
        android:id="@+id/weather_holder_wind_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/weather_holder_tempReal"
        android:layout_marginLeft="48dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/weather_holder_tempRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:text="20/30"/>
        <TextView
            android:id="@+id/weather_holder_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:text="西南风3-4级"/>
    </LinearLayout>
    <TextView
        android:id="@+id/weather_holder_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/weather_holder_wind_container"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="64dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ico_main_location"
        android:drawablePadding="12dp"
        android:text="北京市"/>

</RelativeLayout>