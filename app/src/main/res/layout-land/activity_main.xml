<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBg"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingLeft="52px"
    android:paddingTop="91px"
    android:paddingRight="52px">

    <!--左侧信息界面-->
    <LinearLayout
        android:id="@+id/id_main_left_content"
        android:layout_width="639px"
        android:layout_height="771px"
        android:layout_alignParentStart="true"
        android:background="@drawable/main_info_bg"
        android:orientation="vertical"
        android:paddingLeft="70px"
        android:paddingRight="70px">

        <RelativeLayout
            android:id="@+id/id_rela_login"
            android:layout_width="match_parent"
            android:layout_height="134px">

            <ImageView
                android:id="@+id/iv_login"
                android:layout_width="76px"
                android:layout_height="77px"
                android:layout_centerVertical="true"
                android:src="@drawable/ico_user_default" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="28px"
                android:layout_toRightOf="@id/iv_login"
                android:text="点击登录"
                android:textColor="@color/white"
                android:textSize="32px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fl_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40px"
            android:paddingBottom="47px">

            <TextView
                android:id="@+id/tv_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text=" - "
                android:textColor="@color/white"
                android:textSize="75px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_sign_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/tv_temperature"
                android:text="℃"
                android:textColor="@color/white"
                android:textSize="30px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_temperature"
                android:layout_marginLeft="22px"
                android:layout_toRightOf="@id/id_sign_code"
                android:textColor="@color/white"
                android:textSize="34px"
                tools:text="有雨" />

            <TextView
                android:id="@+id/tv_temperature_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_temperature"
                android:layout_marginTop="15px"
                android:text="-/-"
                android:textColor="@color/main_tv_clo"
                android:textSize="30px"
                tools:text="20°/28°" />

            <TextView
                android:id="@+id/tv_window"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_temperature_day"
                android:layout_marginTop="15px"
                android:textColor="@color/main_tv_clo"
                android:textSize="30px"
                tools:text="西南风3-4级" />

            <ImageView
                android:id="@+id/iv_weather_icon"
                android:layout_width="118px"
                android:layout_height="128px"
                android:layout_alignParentEnd="true"
                android:src="@drawable/weather_rain" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_weather_icon"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15px"
                android:layout_marginRight="23px"
                android:drawableLeft="@drawable/ico_main_location"
                android:drawablePadding="14px"
                android:maxLines="1"
                android:text="--，--"
                android:textColor="@color/white"
                android:textSize="28px" />

        </RelativeLayout>

        <View style="@style/style_white_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="229px"
            android:orientation="vertical"
            android:paddingTop="50px"
            android:paddingBottom="20px">

            <TextClock
                android:id="@+id/tc_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format12Hour="yyyy年MM月dd日"
                android:format24Hour="yyyy年MM月dd日"
                android:includeFontPadding="false"
                android:textColor="@color/main_tv_clo"
                android:textSize="30px" />

            <com.sitechdev.vehicle.pad.view.ReflectTextClock
                android:id="@+id/btn_hp_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23px"
                android:format12Hour="hh:mm"
                android:format24Hour="HH:mm"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="75px"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>

        <View style="@style/style_white_line" />

        <RelativeLayout
            android:id="@+id/id_bluetooth_content"
            android:layout_width="match_parent"
            android:layout_height="153px">

            <ImageView
                android:id="@+id/iv_bluetooth_icon"
                android:layout_width="44px"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_bluetooth" />

            <TextView
                android:id="@+id/iv_bluetooth_phone_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26px"
                android:layout_toRightOf="@id/iv_bluetooth_icon"
                android:text="张三的IPHONE"
                android:textColor="@color/white"
                android:textSize="30px" />
        </RelativeLayout>


    </LinearLayout>

    <!--右侧多媒体界面-->
    <!--右上左部分-->
    <LinearLayout
        android:id="@+id/id_main_right_top_left_content"
        android:layout_width="656px"
        android:layout_height="131px"
        android:layout_marginLeft="22px"
        android:layout_toRightOf="@id/id_main_left_content"
        android:background="@drawable/main_map_item_bg"
        android:orientation="horizontal"
        android:paddingTop="36px"
        android:paddingBottom="36px">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_img_home"
                android:layout_width="53px"
                android:layout_height="48px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/iv_map_home" />

            <TextView
                android:id="@+id/tv_home"
                style="@style/style_tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22px"
                android:text="回家"
                android:textSize="32px" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#4DFFFFFF" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_img_work"
                android:layout_width="48px"
                android:layout_height="44px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/iv_map_work" />

            <TextView
                android:id="@+id/tv_work"
                style="@style/style_tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22px"
                android:text="公司"
                android:textSize="32px" />

        </LinearLayout>
    </LinearLayout>

    <!--右上右部分-->
    <LinearLayout
        android:id="@+id/id_main_right_top_right_content"
        android:layout_width="489px"
        android:layout_height="131px"
        android:layout_marginLeft="10px"
        android:layout_toRightOf="@id/id_main_right_top_left_content"
        android:background="@drawable/main_map_item_bg_right"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="38px"
            android:layout_height="52px"
            android:src="@drawable/iv_teddy_ask" />

        <TextView
            android:id="@+id/tv_what"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23px"
            android:text="你要去哪里"
            android:textColor="#6EFFFFFF"
            android:textSize="32px" />
    </LinearLayout>

    <!--右中部分-->
    <RelativeLayout
        android:id="@+id/id_main_right_middle_content"
        android:layout_width="1155px"
        android:layout_height="443px"
        android:layout_below="@id/id_main_right_top_right_content"
        android:layout_marginLeft="22px"
        android:layout_marginTop="19px"
        android:layout_toRightOf="@id/id_main_left_content">

        <LinearLayout
            android:id="@+id/ll_music"
            android:layout_width="392px"
            android:layout_height="443px"
            android:layout_alignParentStart="true"
            android:background="@drawable/main_info_right_middle_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="50px"
            android:paddingRight="50px">

            <TextView
                android:id="@+id/id_r_m_l_music_main_title"
                style="@style/style_tv_home_music"
                android:text="音乐" />

            <ImageView
                android:id="@+id/id_r_m_l_music_icon"
                android:layout_width="110px"
                android:layout_height="110px"
                android:layout_marginTop="43px"
                android:src="@drawable/iv_music" />

            <LinearLayout
                android:id="@+id/id_r_m_l_music_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <com.sitechdev.vehicle.pad.view.ScrollTextView
                    android:id="@+id/tv_music_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="听妈妈的话 - 周杰伦"
                    android:textColor="@color/white"
                    android:textSize="32px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_r_m_l_music_title"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40px"
                android:background="@drawable/main_home_music_play"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_music_bef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iv_music_bef" />

                <ImageView
                    android:id="@+id/iv_music_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80px"
                    android:clickable="true"
                    android:src="@drawable/selector_play_pause" />

                <ImageView
                    android:id="@+id/iv_music_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80px"
                    android:src="@drawable/iv_music_next" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_news"
            android:layout_width="370px"
            android:layout_height="216px"
            android:layout_marginLeft="12px"
            android:layout_toRightOf="@id/ll_music"
            android:background="@drawable/main_info_right_middle_bg"
            android:gravity="center">

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@drawable/iv_news" />

            <TextView
                android:id="@+id/btn_sitev_news"
                style="@style/style_tv_home_music"
                android:layout_marginLeft="26px"
                android:text="新特速报" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_book"
            android:layout_width="370px"
            android:layout_height="215px"
            android:layout_marginLeft="11px"
            android:layout_toRightOf="@id/ll_news"
            android:background="@drawable/main_info_right_middle_bg"
            android:gravity="center">

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@drawable/iv_child_book" />

            <TextView
                android:id="@+id/btn_child_papers"
                style="@style/style_tv_home_music"
                android:layout_marginLeft="31px"
                android:text="少儿读物" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_car"
            android:layout_width="370px"
            android:layout_height="215px"
            android:layout_below="@id/ll_news"
            android:layout_marginLeft="12px"
            android:layout_marginTop="11px"
            android:layout_toRightOf="@id/ll_music"
            android:background="@drawable/main_info_right_middle_bg"
            android:gravity="center">

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@drawable/iv_car" />

            <TextView
                android:id="@+id/btn_car_fun"
                style="@style/style_tv_home_music"
                android:layout_marginLeft="26px"
                android:text="车嗨娱乐" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_life"
            android:layout_width="370px"
            android:layout_height="215px"
            android:layout_below="@id/ll_book"
            android:layout_marginLeft="11px"
            android:layout_marginTop="11px"
            android:layout_toRightOf="@id/ll_car"
            android:background="@drawable/main_info_right_middle_bg"
            android:gravity="center">

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@drawable/iv_life" />

            <TextView
                android:id="@+id/btn_life_all"
                style="@style/style_tv_home_music"
                android:layout_marginLeft="23px"
                android:text="生活一点通" />
        </LinearLayout>

    </RelativeLayout>
    <!--右下部分 -->
    <LinearLayout
        android:id="@+id/ll_car_power_info"
        android:layout_width="1155px"
        android:layout_height="156px"
        android:layout_below="@id/id_main_right_middle_content"
        android:layout_marginLeft="22px"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@id/id_main_left_content"
        android:background="@drawable/main_info_right_bottom_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="50px"
        android:paddingBottom="50px">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_img_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_power" />

            <TextView
                android:id="@+id/tv_power"
                style="@style/style_tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22px"
                android:includeFontPadding="false"
                android:textSize="48px"
                tools:text="70 %" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#4DFFFFFF" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_img_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_km" />

            <TextView
                android:id="@+id/tv_km"
                style="@style/style_tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23px"
                android:includeFontPadding="false"
                android:textSize="48px"
                tools:text="230 KM" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#4DFFFFFF" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_img_recharge_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_recharge_count" />

            <TextView
                android:id="@+id/tv_recharge"
                style="@style/style_tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:includeFontPadding="false"
                android:textSize="48px"
                tools:text="48 次" />

        </LinearLayout>
    </LinearLayout>

    <!--    <LinearLayout-->
    <!--        android:id="@+id/fl_teddy"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="154px"-->
    <!--        android:clipChildren="false">-->

    <RelativeLayout
        android:id="@+id/fl_teddy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_main_left_content"
        android:layout_marginLeft="34px"
        android:layout_marginTop="62px"
        android:layout_marginRight="16px"
        android:clipChildren="false"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/id_btn_home"
            android:layout_width="81px"
            android:layout_height="156px"
            android:src="@drawable/ico_btn_home" />

        <ImageView
            android:id="@+id/id_btn_location"
            android:layout_width="62px"
            android:layout_height="155px"
            android:layout_marginLeft="121px"
            android:layout_toRightOf="@id/id_btn_home"
            android:src="@drawable/ico_btn_navi" />

        <ImageView
            android:id="@+id/id_btn_music"
            android:layout_width="74px"
            android:layout_height="133px"
            android:layout_marginLeft="138px"
            android:layout_toRightOf="@id/id_btn_location"
            android:src="@drawable/ico_btn_music" />

        <ImageView
            android:id="@+id/id_btn_driver"
            android:layout_width="77px"
            android:layout_height="154px"
            android:layout_marginLeft="118px"
            android:layout_toRightOf="@id/id_btn_music"
            android:src="@drawable/ico_btn_driver" />

        <ImageView
            android:id="@+id/id_btn_apps"
            android:layout_width="64px"
            android:layout_height="137px"
            android:layout_marginLeft="120px"
            android:layout_toRightOf="@id/id_btn_driver"
            android:src="@drawable/ico_btn_apps" />

        <TextView
            android:id="@+id/id_Teddy_Tip_1"
            android:layout_width="311px"
            android:layout_height="92px"
            android:layout_marginLeft="80px"
            android:layout_toRightOf="@id/id_btn_apps"
            android:background="@drawable/bg_btn_teddy_ask"
            android:gravity="center"
            android:text="今天天气怎么样"
            android:textColor="#499AC8"
            android:textSize="32px" />

        <TextView
            android:id="@+id/id_Teddy_Tip_2"
            android:layout_width="311px"
            android:layout_height="92px"
            android:layout_marginLeft="24px"
            android:layout_toRightOf="@id/id_Teddy_Tip_1"
            android:background="@drawable/bg_btn_teddy_ask"
            android:gravity="center"
            android:text="导航回家"
            android:textColor="#499AC8"
            android:textSize="32px" />

        <ImageView
            android:layout_width="167px"
            android:layout_height="278px"
            android:layout_toRightOf="@id/id_Teddy_Tip_2"
            android:src="@drawable/iv_teddy"
            android:translationY="-100px" />

    </RelativeLayout>

    <!--    </LinearLayout>-->
    <!--    </LinearLayout>-->
</RelativeLayout>
