<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="640dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_dialog">
    <!--展示的区域，title， content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">
        <TextView
            android:id="@+id/dialog_t_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:text=""/>
        <TextView
            android:id="@+id/dialog_t_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:maxLines="5"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="30sp"
            android:textColor="@color/colo_D2D2D2"
            android:text=""/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colo_FF6E6E80"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_t_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="32sp">

        </TextView>
        <View
            android:id="@+id/v_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colo_FF6E6E80"/>
        <TextView
            android:id="@+id/dialog_t_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="32sp">

        </TextView>
    </LinearLayout>
</LinearLayout>