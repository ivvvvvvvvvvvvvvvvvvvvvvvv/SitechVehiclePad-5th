<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="960px"
    android:layout_height="452px"
    android:background="@drawable/bg_dialog_base"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text="是否确认退出？"
        android:textColor="@android:color/white"
        android:textSize="@dimen/upgrade_text_title" />

    <TextView
        android:id="@+id/tv_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:maxLines="3"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="系统有新版本，建议使用wifi更新，更新后需要重启，是否立即更新？"
        android:textColor="@android:color/white"
        android:textSize="@dimen/upgrade_text_size"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="82px"
        android:layout_marginTop="100px"
        android:layout_marginEnd="82px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_tv_cancel"
            android:layout_width="373px"
            android:layout_height="100px"
            android:background="@drawable/bg_dialog_base_btn_cancel"
            android:gravity="center"
            android:text="取消"
            android:textColor="#5F7EC3"
            android:textSize="38px" />

        <TextView
            android:id="@+id/id_tv_ok"
            android:layout_width="373px"
            android:layout_height="100px"
            android:layout_marginLeft="50px"
            android:background="@drawable/bg_dialog_base_btn_ok"
            android:gravity="center"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="38px" />
    </LinearLayout>
</LinearLayout>
