<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="960px"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_base"
    android:orientation="vertical"
    android:padding="40px">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="93px"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text="是否确认退出？"
        android:textColor="@android:color/white"
        android:textSize="38px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:layout_marginBottom="30px"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_tv_cancel"
            android:layout_width="373px"
            android:layout_height="100px"
            android:background="@drawable/ico_btn_disable"
            android:gravity="center"
            android:text="取消"
            android:textColor="#5F7EC3"
            android:textSize="38px" />

        <TextView
            android:id="@+id/id_tv_ok"
            android:layout_width="373px"
            android:layout_height="100px"
            android:layout_marginLeft="50px"
            android:background="@drawable/ico_btn_enable"
            android:gravity="center"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="38px" />
    </LinearLayout>
</LinearLayout>
