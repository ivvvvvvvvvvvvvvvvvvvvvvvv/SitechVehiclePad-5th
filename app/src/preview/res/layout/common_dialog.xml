<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_relative"
    android:layout_width="700px"
    android:layout_height="wrap_content"
    android:background="@drawable/ico_common_window_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90px"
        android:gravity="center"
        android:text="是否确认退出登录？"
        android:textColor="@color/white"
        android:textSize="38px" />

    <RelativeLayout
        android:id="@+id/ll_mcu_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dialog_content"
        android:layout_marginTop="106px"
        android:layout_marginBottom="43px"
        android:orientation="horizontal"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px">

        <Button
            android:id="@+id/btn_upgrade_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ico_button_ok_bg"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="32px" />

        <Button
            android:id="@+id/btn_upgrade_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ico_button_cancel_bg"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="32px" />
    </RelativeLayout>
</RelativeLayout>
