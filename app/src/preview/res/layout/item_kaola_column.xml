<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_500"
    android:layout_height="@dimen/px_290"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/px_20"
    android:layout_marginTop="@dimen/px_19">

    <ImageView
        android:id="@+id/iv_cover_bg"
        android:layout_width="@dimen/px_500"
        android:layout_height="@dimen/px_290"
        android:layout_gravity="center"
        android:clickable="true"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="@dimen/px_500"
        android:layout_height="@dimen/px_290"
        android:background="@drawable/shape_corner" />

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/px_190"
        android:layout_height="@dimen/px_190"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px_50"
        android:clickable="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px_285"
        android:layout_marginRight="@dimen/px_40"
        android:text="标题标题"
        android:textColor="@color/white"
        android:textSize="@dimen/px_40" />



</FrameLayout>